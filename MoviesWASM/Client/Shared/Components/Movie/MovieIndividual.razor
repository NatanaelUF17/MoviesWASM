<div>
    <p>Title: <b>@Movie.Title</b></p>
    <p>Release Date: <b>@Movie.ReleaseDate</b></p>
    @if (ShowButtons)
    {
        <div>
            <button @onclick="(() => DeleteMovie.InvokeAsync(Movie))" class="btn btn-outline-danger">Delete</button>
        </div>
    }
</div>

@code {
    [Parameter] public Movie Movie { get; set; }
    [Parameter] public bool ShowButtons { get; set; }
    [Parameter] public EventCallback<Movie> DeleteMovie { get; set; }
}
